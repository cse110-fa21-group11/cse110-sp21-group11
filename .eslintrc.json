{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node":true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "extends": "eslint:recommended" 
    ,
    "rules": {
        "parser": "@babel/eslint-parser",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
