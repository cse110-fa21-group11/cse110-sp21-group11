{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node":true
    },
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaVersion": 10,
        "requireConfigFile":false,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    //"parser": "babel-eslint",
    "extends": "eslint:recommended" ,
    "parser": "@babel/eslint-parser",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
